<% provide(:title, "Friend Requests") %>
<div class="row">
  <div class="col-md-12">
    <h1>Friend Requests</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <ul class="nav nav-tabs nav-justified">
      <li class="active"><a href="#received" data-toggle="tab" aria-expanded="true">Receieved</a></li>
      <li class=""><a href="#sent" data-toggle="tab" aria-expanded="false">Sent</a></li>
    </ul>

    <div id="myTabContent" class="tab-content">
      <div class="tab-pane fade active in" id="received">
        <% if @received.empty? %>
          <h4>You have no received requests.</h4>
        <% else %>
          <%= render 'received' %>
        <% end %>
      </div>
      <div class="tab-pane fade" id="sent">
        <% if @sent.empty? %>
          <h4>You have no sent requests.</h4>
        <% else %>
          <%= render 'sent' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
