<% provide(:title, 'Home') %>

<% if user_signed_in? %>
  <% content_for :features, "profile-page" %>
  <% content_for :class, "profile-page" %>

  <div class="header header-filter" style="background: linear-gradient(to right, #4568dc, #b06ab3);"></div>
    <div class="main main-raised">
      <div class="profile-content">
          <div class="container">
            <div class="row">

              <div class="profile">
                <div class="col-md-3">
                  <%= render 'shared/user_info', user: @user %>

                  <% unless @user == current_user || @user.friends.include?(current_user) %>
                    <%= render 'send_friend_request' %>
                  <% end %>

                  <%= render 'posts/post_form' %>
                </div>
              </div>

              <div class="col-md-8 col-md-offset-1">
                <div class="profile">
                  <%= render 'users/profile_feed' %>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render 'layouts/footer' %>
<% else %>
  <%= render 'static_pages/landing' %>
<% end %>

