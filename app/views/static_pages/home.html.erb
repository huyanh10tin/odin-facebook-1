<% provide(:title, 'Home') %>

<% if user_signed_in? %>
  <div class="row">
    <div class="col-md-4">
      <section>
        <%= render 'shared/user_info', user: @user %>
      </section>
      <section>
        <%= render 'posts/post_form' %>
      </section>
    </div>
  </div>
<% else %>
  <%= render 'static_pages/landing' %>
<% end %>

