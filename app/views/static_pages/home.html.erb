<% provide(:title, 'Home') %>

<% if user_signed_in? %>
  <div class="row">
    <div class="col-md-4">
      <section>
        <%= render 'shared/user_info', user: @user %>
      </section>
      <section>
        <%= render 'posts/post_form' %>
      </section>
    </div>
  </div>
<% else %>
  <div class="jumbotron text-center">
    <h1>Welcome to Longhouse</h1>
    <p>A social site that revolves around the things that makes life worth living: mead, glory, and Valhalla</p>
    <%= link_to 'Sign up!', new_user_registration_path, class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>

