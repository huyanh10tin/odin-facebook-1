<% provide(:title, 'Sign up') %>
<div class="row">
  <div class="col-md-8 col-md-offset-2 col-xs-12">
    <h2 class="text-center">Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <fieldset>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control', placeholder: 'John Doe' %>
          </div>

          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control', placeholder: 'johndoe@example.com' %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Must be at least #{@minimum_password_length} characters long" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.submit "Sign up", class: 'btn btn-primary' %>
          </div>
        </fieldset>
      <% end %>

      <%= render "devise/shared/links" %>
  </div>
</div>


