<% provide(:title, 'All Users') %>

<div class="header header-filter" style="background: linear-gradient(to right, #feac5e, #c779d0, #4bc0c8);"></div>
  <div class="main main-raised">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h2 class="text-center">All Users</h2>
          <%= will_paginate %>
          <ul class="list-group">
            <% @users.each do |user| %>
              <li class="list-group-item">
                <h5><%= link_to user.name, user %></h5>
              </li>
            <% end %>
          </ul>
          <%= will_paginate %>
        </div>
      </div>
    </div>
  </div>
</div>
