<div class="nav-align-center">
  <ul class="nav nav-pills nav-justified" role="tablist">
    <li class="active">
      <a href="#feed" role="tab" data-toggle="tab">
        <i class="material-icons">rss_feed</i>
        Feed
      </a>
    </li>
    <li>
      <a href="#posts" role="tab" data-toggle="tab">
        <i class="material-icons">speaker_notes</i>
        Posts
      </a>
    </li>
    <li>
      <a href="#favorites" role="tab" data-toggle="tab">
        <i class="material-icons">favorite</i>
        Likes
      </a>
    </li>
    <li>
      <a href="#friends" role="tab" data-toggle="tab">
        <i class="material-icons">group</i>
          Friends
      </a>
    </li>
  </ul>
</div>


<div class="tab-content">
  <div class="tab-pane fade active in" id="feed">

  </div>

  <div class="tab-pane fade" id="posts">
    <ul class="list-group">
      <%= render @posts %>
    </ul>
  </div>

  <div class="tab-pane fade" id="favorites">

    <% if @favorites.empty? %>
      <h4>You haven't liked anything yet.</h4>
    <% else %>
      <ul class="list-group">
        <%= render partial: 'users/favorite', collection: @favorites %>
      </ul>
    <% end %>
  </div>

  <div class="tab-pane fade" id="friends">
    <% if @friends.empty? %>
      <h4>You have no friends yet.</h4>
      <%= link_to "Go make some!", users_path, class: "text-primary" %>
    <% else %>
      <ul class="list-group">
        <%= render partial: 'users/friend', collection: @friends %>
      </ul>
    <% end %>
  </div>
</div>

