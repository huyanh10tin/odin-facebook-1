<div class="tab-content">
  <div class="tab-pane fade active in" id="feed">
    <% if @feed.empty? %>
      <h4>There's nothing here...</h4>
    <% else %>
      <ul class="list-group">
        <%= render partial: 'posts/post', collection: @feed, as: 'post' %>
      </ul>
      <%= will_paginate @feed, param_name: 'feed_page' %>
    <% end %>
  </div>

  <div class="tab-pane fade" id="posts">
    <% if @posts.empty? %>
      <h4>There's nothing here...</h4>
    <% else %>
      <ul class="list-group">
        <%= render @posts %>
      </ul>
      <%= will_paginate @posts, param_name: 'posts_page' %>
    <% end %>
  </div>

  <div class="tab-pane fade" id="favorites">

    <% if @favorites.empty? %>
      <h4>You haven't liked anything yet.</h4>
    <% else %>
      <ul class="list-group">
        <%= render partial: 'users/favorite', collection: @favorites %>
      </ul>
      <%= will_paginate @favorites, param_name: 'favorites_page' %>
    <% end %>
  </div>

  <div class="tab-pane fade" id="friends">
    <% if @friends.empty? %>
      <h4>You have no friends yet.</h4>
      <%= link_to "Go make some!", users_path, class: "text-primary" %>
    <% else %>
      <ul class="list-group">
        <%= render partial: 'users/friend', collection: @friends %>
      </ul>
      <%= will_paginate @friends, param_name: 'friends_page' %>
    <% end %>
  </div>
</div>
