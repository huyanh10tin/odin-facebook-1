<li class="list-group-item">
  <div class="card">
    <div class="content">
      <h6><%= link_to friend.name, user_path(friend) %></h6>

      <% if current_user.friends.include?(friend) %>
        <%= link_to "Remove friend", friendship_path(friend), method: :delete, class: "btn btn-danger btn-raised" %>
      <% else %>
        <%= render 'users/send_friend_request', user: friend %>
      <% end %>

    </div>
  </div>
</li>
