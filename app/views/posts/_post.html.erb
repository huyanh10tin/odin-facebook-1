<div class="list-group-item">
  <div class="card">
    <div class="content">
      <h6><%= link_to post.user.name, user_path(post.user) %></h6>
      <p><%= post.content %></p>
      <p class="text-muted">Posted <%= time_ago_in_words(post.created_at) %> ago.</p>

      <% unless post.user == current_user %>
        <% if current_user.liked_posts.include?(post) %>
          <%= render 'users/unlike', post: post %>
        <% else %>
          <%= render 'users/like', post: post %>
        <% end %>
      <% end %>

      <button class="btn btn-primary btn-just-icon" data-toggle="modal" data-target="#myModal">
        <i class="fa fa-pencil"></i>
      </button>

    </div>
  </div>
</div>
